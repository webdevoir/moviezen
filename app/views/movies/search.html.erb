<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-lg-9">
      <h2 class="my-4 font-weight-light">Search results for: <span class="text-muted"><%= @query %></span></h2>
      <ul class="list-group">
        <% @movies.each do |movie| %>
        <li class="list-group-item search-result-item">
          <div class="row">
            <div class="col-3">
              <div class="search-result-img">
                <% unless movie.poster_url.blank? %>
                  <img class="img-fluid" src="<%= movie.poster_url %>" alt="<%= movie.title %>">
                <% end %>
              </div>
            </div>
            <div class="col-9">
              <div class="search-result-info">
                <h4>
                  <a class="link-normal" href="<%= movie_path(movie.id) %>"><%= movie.title %> <% unless movie.year.blank? %><small class="year year-dark"><%= "(#{movie.year})"%></small><% end %></a>
                </h4>
                <div class="ratings ratings-dark ratings-sm">
                  <% unless movie.tomato_rating.nil? %>
                    <div class="rating">
                      <img
                        class="tomato-icon"
                        src="<%= asset_path('icons8-tomato-50.png') %>"
                      />
                      <span class="rating-num">
                        <%= movie.tomato_rating %><small>%</small>
                      </span>
                    </div>
                  <% end %>
                  <% unless movie.vote_average.nil? %>
                    <div class="rating"><svg fill="currentColor" preserveAspectRatio="xMidYMid meet" height="20" width="20" viewBox="0 0 40 40" style="vertical-align: middle; color: rgb(245, 222, 80);"><g><path d="m38.6 14.4q0 0.5-0.5 1.1l-8.1 7.9 1.9 11.2q0 0.1 0 0.4 0 0.5-0.2 0.8t-0.7 0.3q-0.4 0-0.9-0.2l-10-5.3-10 5.3q-0.5 0.2-0.9 0.2-0.5 0-0.7-0.3t-0.3-0.8q0-0.1 0.1-0.4l1.9-11.2-8.1-7.9q-0.6-0.6-0.6-1.1 0-0.8 1.3-1l11.2-1.6 5-10.2q0.4-0.9 1.1-0.9t1.1 0.9l5 10.2 11.2 1.6q1.2 0.2 1.2 1z"></path></g></svg><span class="rating-num"><%= movie.vote_average %></span></div>
                  <% end %>
                </div>
                <p class="mt-3"><%= movie.overview %></p>
              </div>
            </div>
          </div>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
