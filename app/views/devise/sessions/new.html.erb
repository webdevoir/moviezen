<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>
    <h2 class="h3 mb-4 font-weight-normal text-center">Please log in</h2>

    <%= f.label :email, class: "sr-only" %>
    <%= f.email_field :email, autofocus: "true", autocomplete: "email", class: "form-control form-control-lg", placeholder: "Email" %>
    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, autocomplete: "off", class: "form-control form-control-lg", placeholder: "Password" %>

    <% if devise_mapping.rememberable? -%>
      <div class="checkbox mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions mb-3">
      <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
    </div>

    <%= render "devise/shared/links" %>
<% end %>
